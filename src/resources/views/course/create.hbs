<div class="container">
    <div class="mt-4">
        <div class="row justify-content-md-center">
            <div class="col-md-5">
                <form action="/course/store" method="POST">
                    <div class="mb-3">
                        <label for="nameCourse" class="form-label">Tên khoá học:</label>
                        <input name="name" type="text" class="form-control" id="nameCourse">
                    </div>
                    <div class="mb-3">
                        <label for="descriptionCourse" class="form-label">Mô tả:</label>
                        <input name="description" type="text" class="form-control" id="descriptionCourse">
                    </div>
                    <div class="mb-3">
                        <label for="videoIDCourse" class="form-label">VideoID:</label>
                        <input name="videoID" type="text" class="form-control" id="videoIDCourse">
                    </div>
                    <div class="mb-3">
                        <label for="levelCourse" class="form-label">Trình độ:</label>
                        <input name="level" type="text" class="form-control" id="levelCourse">
                    </div>
                    <button type="submit" class="btn btn-primary">Thêm khoá học</button>
                </form>
            </div>
        </div>
    </div>

</div>